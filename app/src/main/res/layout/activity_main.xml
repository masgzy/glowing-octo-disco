<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Shizuku 授权栏 -->
        <LinearLayout
            android:id="@+id/auth_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF5722"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tv_auth_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shizuku 未授权（点击授权）"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_auth_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连点器设置"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- 截图方式选择 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="截图方式:"
            android:textColor="#666666"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/rg_screenshot_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <RadioButton
                android:id="@+id/rb_file_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存图片"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_pipe_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="管道传输" />
        </RadioGroup>

        <!-- 循环检测间隔 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="循环检测间隔 (秒):"
            android:textColor="#666666"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/et_detection_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入 0.5 - 2.0"
            android:inputType="numberDecimal"
            android:text="1.0"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- 点击间隔 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击间隔 (ms):"
            android:textColor="#666666"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/et_click_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入 100 - 1000"
            android:inputType="number"
            android:text="500"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- 保存设置按钮 -->
        <Button
            android:id="@+id/btn_save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存设置"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 开启悬浮窗按钮 -->
        <Button
            android:id="@+id/btn_show_floating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示悬浮窗"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 隐藏悬浮窗按钮 -->
        <Button
            android:id="@+id/btn_hide_floating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐藏悬浮窗"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#9E9E9E"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- 当前设置显示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前设置:"
            android:textColor="#666666"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tv_current_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="截图方式: 保存图片\n检测间隔: 1.0 秒\n点击间隔: 500 ms"
            android:textColor="#333333"
            android:textSize="14sp"
            android:padding="12dp"
            android:background="#E0E0E0" />

    </LinearLayout>

</ScrollView>